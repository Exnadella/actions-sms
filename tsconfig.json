{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es2018",
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "types": ["node"],
  "typeRoots": ["./node_modules/@types"],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
